    <Grid>
        <Viewbox x:Name="logo" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="330,62,0,0" Height="82" VerticalAlignment="Top" HorizontalAlignment="Left" Width="209" ToolTip="Open GitHub repository">
            <Border BorderThickness="1" Width="Auto" Height="Auto" MouseUp="logo_MouseUp" Background="#00000000">
                <Border.Style>
                    <Style>
                        <Style.Triggers>
                            <Trigger Property="Border.IsMouseOver" Value="True">
                                <Setter Property="Border.BorderBrush" Value="#FF0466AA" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <ContentControl Content="{StaticResource Logo}" Margin="30, 10, 30, 10"></ContentControl>
            </Border>
        </Viewbox>
        <Label x:Name="labelHeader" Content="Control program for Rohde &amp; Schwarz Hameg HM8118&#xD;&#xA;Programmable LCR Bridge" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="18.667" FontWeight="Bold"/>
        <Label x:Name="labelVersion" HorizontalAlignment="Left" Margin="20,83,0,0" VerticalAlignment="Top" FontSize="16" Content="Version:"/>
        <Label x:Name="labelAuthor" Content="Contact:" HorizontalAlignment="Left" Margin="20,113,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="textBlockEmail" HorizontalAlignment="Left" Margin="110,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Hyperlink NavigateUri="mailto:jpolonsky@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">
                <TextBlock x:Name="textBlockEmailAddress" Text="jpolonsky@gmail.com" FontSize="13.333"/>
            </Hyperlink>
        </TextBlock>
        <Label x:Name="labelLicence" Content="License:" HorizontalAlignment="Left" Margin="20,143,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="textBlockLicence" Text="This program and its source code, except for parts listed below,&#xD;&#xA;is licensed under GNU General Public License v.3." IsReadOnly="True" HorizontalAlignment="Left" Margin="110,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="407" FontSize="13.333" AcceptsReturn="True" BorderThickness="0"/>
        <ListView x:Name="listViewAttribution" Margin="10,203,10,10" SelectionMode="Extended" FontSize="13.333" KeyDown="listViewAttribution_KeyDown">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                </Style>
            </ListView.Resources>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="listViewCopy" Click="listViewAttributionCopy_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kopírovat" Width="140"/>
                                <TextBlock Text="Ctrl+C"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Name="listViewCopyWithHeader" Click="listViewAttributionCopyWithHeader_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kopírovat se záhlavím" Width="140"/>
                                <TextBlock Text="Ctrl+D"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="aboutAttributionInternalName" Width="Auto" DisplayMemberBinding="{Binding InternalName}">
                        <GridViewColumn.Header>
                            <TextBlock Text="Description" Margin="10,0,0,0"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn x:Name="aboutAttributionOriginalName" Width="Auto" DisplayMemberBinding="{Binding OriginalName}">
                        <GridViewColumn.Header>
                            <TextBlock Text="Original title" Margin="10,0,0,0"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn x:Name="aboutAttributionAuthor" Width="Auto" DisplayMemberBinding="{Binding Author}">
                        <GridViewColumn.Header>
                            <TextBlock Text="Author" Margin="10,0,0,0"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn x:Name="aboutAttributionLicence" Width="Auto" DisplayMemberBinding="{Binding Licence}">
                        <GridViewColumn.Header>
                            <TextBlock Text="License" Margin="10,0,0,0"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn x:Name="aboutAttributionFile" Width="Auto" DisplayMemberBinding="{Binding File}">
                        <GridViewColumn.Header>
                            <TextBlock Text="File" Margin="10,0,0,0"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn x:Name="aboutAttributionURL" Width="Auto">
                        <GridViewColumn.Header>
                            <TextBlock Text="URL" Margin="10,0,0,0"></TextBlock>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                <Hyperlink NavigateUri="{Binding URL}" RequestNavigate="Hyperlink_RequestNavigate">
                                    <TextBlock Text="{Binding URL}" />
                                </Hyperlink>
                            </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="textBlockVersion" HorizontalAlignment="Left" Margin="110,91,0,0" TextWrapping="Wrap" Text="{Binding Path=Version, Mode=OneWay}" VerticalAlignment="Top" FontSize="13.333" IsReadOnly="True" BorderThickness="0"/>
    </Grid>
</Window>